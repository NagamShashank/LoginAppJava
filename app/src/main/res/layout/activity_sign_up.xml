<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenolive_gradient2"
    android:orientation="vertical"
    tools:context=".SignUp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_40sdp"
        app:cardCornerRadius="15dp"
        android:layout_marginVertical="@dimen/_80sdp"
        android:outlineSpotShadowColor="@color/DarkGreen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="Sign Up"
                android:textColor="@color/Red"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/SignUpLayoutUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_line"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/SignUpUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5ssp"
                    android:backgroundTint="@color/white"
                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNM qwertyuiopasdfghjklzxcvbnm1234567890"
                    android:hint="@string/hint"
                    android:inputType="text"
                    android:maxLength="10"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/user_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/Red"/>

            <LinearLayout
                android:id="@+id/SighUpLayoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_line"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/SignUpEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5ssp"
                    android:backgroundTint="@color/white"
                    android:digits="qwertyuiopasdfghjklzxcvbnm@#$%*_-.1234567890"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/Email_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/Red"/>

            <LinearLayout
                android:id="@+id/SignUpLayoutContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:background="@drawable/border_line">

                <TextView
                    android:id="@+id/countryCode"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="+00"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

                <Spinner
                    android:id="@+id/Spinner"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="select"/>

                <EditText
                    android:id="@+id/SignUpContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textSize="20sp"
                    android:backgroundTint="@color/white"
                    android:digits="1234567890"/>

            </LinearLayout>

            <TextView
                android:id="@+id/Contact_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/Red"/>

            <LinearLayout
                android:id="@+id/SighUpLayoutPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_line"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/SignUpPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5ssp"
                    android:backgroundTint="@color/white"
                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNM qwertyuiopasdfghjklzxcvbnm@#$%*_-+1234567890"
                    android:hint="Password"
                    android:maxLength="8"
                    android:inputType="textPassword"
                    android:drawableEnd="@drawable/password_invisible"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/Password_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/Red"/>



            <Button
                android:id="@+id/SignUpBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Sign Up"
                android:background="@drawable/btn_background"
                android:textAllCaps="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="If Registered - "
                    android:textColor="@color/DarkGreen"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/SignInText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign In"
                    android:textColor="@color/DarkGreen"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>